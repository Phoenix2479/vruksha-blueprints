{
  "metadata": {
    "id": "abandoned_cart_recovery",
    "name": "Abandoned Cart Recovery",
    "version": "0.1.0",
    "owner": "Vruksha Team",
    "description": "Abandoned cart detection and recovery for Niyam e-commerce system",
    "tags": [
      "ecommerce",
      "abandoned-cart",
      "recovery",
      "email"
    ],
    "vertical": "ecommerce"
  },
  "runtime": {
    "language": "node",
    "entrypoints": {
      "service": "service.js",
      "ui": "ui/abandoned_cart_recovery-remote"
    },
    "port": 9110,
    "env": {
      "NATS_URL": "nats://127.0.0.1:4222"
    }
  },
  "apis": {
    "openapi": "./openapi.yaml",
    "basePath": "/"
  },
  "events": {
    "bus": "nats",
    "produces": [
      {
        "name": "recovery.triggered",
        "version": "1",
        "subject": "ecommerce.recovery.triggered.v1"
      },
      {
        "name": "recovery.converted",
        "version": "1",
        "subject": "ecommerce.recovery.converted.v1"
      }
    ],
    "consumes": [
      {
        "name": "cart.abandoned",
        "version": "1",
        "subject": "ecommerce.cart.abandoned.v1"
      }
    ]
  },
  "ai": {
    "enabled": false,
    "gateway": "vruksha-ai-gateway",
    "intents": [],
    "defaultProvider": "auto",
    "allowedProviders": [
      "openai",
      "anthropic",
      "gemini",
      "ollama",
      "local",
      "openrouter"
    ],
    "fallbackChain": [
      "local",
      "ollama",
      "openrouter"
    ],
    "config": {
      "maxTokens": 4096,
      "temperature": 0.7,
      "timeout": 30000
    }
  },
  "permissions": [
    {
      "resource": "abandoned_cart_recovery",
      "actions": [
        "read",
        "write",
        "update",
        "delete"
      ]
    }
  ],
  "config": {
    "public": {},
    "secrets": [
      "DB_PASSWORD",
      "JWT_SECRET",
      "NATS_URL"
    ]
  },
  "health": {
    "liveness": "/healthz",
    "readiness": "/readyz"
  },
  "depends_on": []
}
