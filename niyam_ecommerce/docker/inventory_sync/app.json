{
  "metadata": {
    "id": "inventory_sync",
    "name": "Inventory Sync",
    "version": "1.0.0",
    "owner": "Vruksha Team",
    "description": "Stock levels, reservations, sync sources, and low-stock alerts for ecommerce",
    "tags": [
      "ecommerce",
      "inventory",
      "stock",
      "sync",
      "alerts"
    ]
  },
  "runtime": {
    "language": "node",
    "entrypoints": {
      "service": "service.js",
      "ui": "/ui/dist"
    },
    "port": 9107,
    "env": {
      "NATS_URL": "nats://127.0.0.1:4222"
    }
  },
  "apis": {
    "openapi": "./openapi.yaml",
    "basePath": "/"
  },
  "events": {
    "bus": "nats",
    "produces": [
      {
        "name": "stock.updated",
        "version": "1",
        "subject": "ecommerce.stock.updated.v1"
      },
      {
        "name": "stock.alert",
        "version": "1",
        "subject": "ecommerce.stock.alert.v1"
      }
    ],
    "consumes": [
      {
        "name": "order.created",
        "version": "1",
        "subject": "ecommerce.order.created.v1"
      }
    ]
  },
  "ai": {
    "enabled": false,
    "gateway": "vruksha-ai-gateway",
    "intents": [],
    "defaultProvider": "auto",
    "allowedProviders": [
      "openai",
      "anthropic",
      "gemini",
      "ollama",
      "local",
      "openrouter"
    ],
    "fallbackChain": [
      "local",
      "ollama",
      "openrouter"
    ],
    "config": {
      "maxTokens": 4096,
      "temperature": 0.7,
      "timeout": 30000
    }
  },
  "permissions": [
    {
      "resource": "inventory_sync",
      "actions": [
        "read",
        "write",
        "update",
        "delete"
      ]
    }
  ],
  "config": {
    "public": {},
    "secrets": [
      "DB_PASSWORD",
      "JWT_SECRET",
      "NATS_URL"
    ]
  },
  "health": {
    "liveness": "/healthz",
    "readiness": "/readyz"
  },
  "depends_on": []
}
