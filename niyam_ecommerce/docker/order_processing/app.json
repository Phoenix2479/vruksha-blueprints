{
  "metadata": {
    "id": "order_processing",
    "name": "Order Processing",
    "version": "1.0.0",
    "owner": "Vruksha Team",
    "description": "Order lifecycle management with fulfillments and refunds for ecommerce",
    "tags": [
      "ecommerce",
      "orders",
      "fulfillment",
      "refunds"
    ]
  },
  "runtime": {
    "language": "node",
    "entrypoints": {
      "service": "service.js",
      "ui": "/ui/dist"
    },
    "port": 9104,
    "env": {
      "NATS_URL": "nats://127.0.0.1:4222"
    }
  },
  "apis": {
    "openapi": "./openapi.yaml",
    "basePath": "/"
  },
  "events": {
    "bus": "nats",
    "produces": [
      {
        "name": "order.created",
        "version": "1",
        "subject": "ecommerce.order.created.v1"
      },
      {
        "name": "order.fulfilled",
        "version": "1",
        "subject": "ecommerce.order.fulfilled.v1"
      },
      {
        "name": "order.refunded",
        "version": "1",
        "subject": "ecommerce.order.refunded.v1"
      }
    ],
    "consumes": [
      {
        "name": "checkout.completed",
        "version": "1",
        "subject": "ecommerce.checkout.completed.v1"
      }
    ]
  },
  "ai": {
    "enabled": false,
    "gateway": "vruksha-ai-gateway",
    "intents": [],
    "defaultProvider": "auto",
    "allowedProviders": [
      "openai",
      "anthropic",
      "gemini",
      "ollama",
      "local",
      "openrouter"
    ],
    "fallbackChain": [
      "local",
      "ollama",
      "openrouter"
    ],
    "config": {
      "maxTokens": 4096,
      "temperature": 0.7,
      "timeout": 30000
    }
  },
  "permissions": [
    {
      "resource": "order_processing",
      "actions": [
        "read",
        "write",
        "update",
        "delete"
      ]
    }
  ],
  "config": {
    "public": {},
    "secrets": [
      "DB_PASSWORD",
      "JWT_SECRET",
      "NATS_URL"
    ]
  },
  "health": {
    "liveness": "/healthz",
    "readiness": "/readyz"
  },
  "depends_on": []
}
