{
  "metadata": {
    "id": "accounting_fiscal_periods",
    "name": "Fiscal Periods",
    "version": "0.1.0",
    "owner": "Vruksha Team",
    "description": "Fiscal year, period, cost center, and budget management",
    "tags": [
      "accounting",
      "fiscal",
      "periods",
      "cost-centers",
      "budgets"
    ],
    "vertical": "accounting"
  },
  "runtime": {
    "language": "node",
    "entrypoints": {
      "service": "service.js"
    },
    "port": 8848,
    "env": {
      "NATS_URL": "nats://127.0.0.1:4222"
    }
  },
  "events": {
    "bus": "nats",
    "produces": [
      {
        "name": "fiscal_year.created",
        "version": "1",
        "subject": "accounting.fiscal_year.created.v1"
      },
      {
        "name": "period.closed",
        "version": "1",
        "subject": "accounting.period.closed.v1"
      },
      {
        "name": "cost_center.created",
        "version": "1",
        "subject": "accounting.cost_center.created.v1"
      }
    ],
    "consumes": []
  },
  "ai": {
    "enabled": false,
    "gateway": "vruksha-ai-gateway",
    "intents": [],
    "defaultProvider": "auto",
    "allowedProviders": [
      "openai",
      "anthropic",
      "gemini",
      "ollama",
      "local",
      "openrouter"
    ],
    "fallbackChain": [
      "local",
      "ollama",
      "openrouter"
    ],
    "config": {
      "maxTokens": 4096,
      "temperature": 0.7,
      "timeout": 30000
    }
  },
  "permissions": [
    {
      "resource": "accounting_fiscal_periods",
      "actions": [
        "read",
        "write",
        "update",
        "delete"
      ]
    }
  ],
  "config": {
    "public": {},
    "secrets": [
      "DB_PASSWORD",
      "JWT_SECRET",
      "NATS_URL"
    ]
  },
  "health": {
    "liveness": "/healthz",
    "readiness": "/readyz"
  },
  "depends_on": [
    "accounting_chart_of_accounts",
    "accounting_journal_entries"
  ]
}
