{
  "metadata": {
    "id": "product_reviews",
    "name": "Product Reviews",
    "version": "0.1.0",
    "owner": "Vruksha Team",
    "description": "Product reviews, ratings, moderation, and aggregation for Niyam e-commerce",
    "tags": [
      "ecommerce",
      "reviews",
      "ratings",
      "moderation"
    ]
  },
  "runtime": {
    "language": "node",
    "entrypoints": {
      "service": "service.js",
      "ui": "ui/product_reviews-remote"
    },
    "port": 9111,
    "env": {
      "NATS_URL": "nats://127.0.0.1:4222"
    }
  },
  "apis": {
    "openapi": "./openapi.yaml",
    "basePath": "/"
  },
  "events": {
    "bus": "nats",
    "produces": [
      {
        "name": "review.submitted",
        "version": "1",
        "subject": "ecommerce.review.submitted.v1"
      },
      {
        "name": "review.approved",
        "version": "1",
        "subject": "ecommerce.review.approved.v1"
      }
    ],
    "consumes": []
  },
  "ai": {
    "enabled": false,
    "gateway": "vruksha-ai-gateway",
    "intents": [],
    "defaultProvider": "auto",
    "allowedProviders": ["openai", "anthropic", "gemini", "ollama", "local", "openrouter"],
    "fallbackChain": ["local", "ollama", "openrouter"],
    "config": {
      "maxTokens": 4096,
      "temperature": 0.7,
      "timeout": 30000
    }
  },
  "permissions": [
    {
      "resource": "product_reviews",
      "actions": ["read", "write", "update", "delete"]
    }
  ],
  "config": {
    "public": {},
    "secrets": ["DB_PASSWORD", "JWT_SECRET", "NATS_URL"]
  },
  "health": {
    "liveness": "/healthz",
    "readiness": "/readyz"
  },
  "depends_on": []
}
