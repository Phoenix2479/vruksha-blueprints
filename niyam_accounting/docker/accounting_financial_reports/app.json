{
  "metadata": {
    "id": "accounting_financial_reports",
    "name": "Financial Reports",
    "version": "0.1.0",
    "owner": "Vruksha Team",
    "description": "Balance sheet, P&L, cash flow, and custom financial statements",
    "tags": [
      "accounting",
      "reports",
      "financial",
      "balance-sheet",
      "profit-loss"
    ],
    "vertical": "accounting"
  },
  "runtime": {
    "language": "node",
    "entrypoints": {
      "service": "service.js"
    },
    "port": 8847,
    "env": {
      "NATS_URL": "nats://127.0.0.1:4222"
    }
  },
  "events": {
    "bus": "nats",
    "produces": [],
    "consumes": []
  },
  "ai": {
    "enabled": false,
    "gateway": "vruksha-ai-gateway",
    "intents": [],
    "defaultProvider": "auto",
    "allowedProviders": [
      "openai",
      "anthropic",
      "gemini",
      "ollama",
      "local",
      "openrouter"
    ],
    "fallbackChain": [
      "local",
      "ollama",
      "openrouter"
    ],
    "config": {
      "maxTokens": 4096,
      "temperature": 0.7,
      "timeout": 30000
    }
  },
  "permissions": [
    {
      "resource": "accounting_financial_reports",
      "actions": [
        "read",
        "write",
        "update",
        "delete"
      ]
    }
  ],
  "config": {
    "public": {},
    "secrets": [
      "DB_PASSWORD",
      "JWT_SECRET",
      "NATS_URL"
    ]
  },
  "health": {
    "liveness": "/healthz",
    "readiness": "/readyz"
  },
  "depends_on": [
    "accounting_chart_of_accounts",
    "accounting_general_ledger"
  ]
}
