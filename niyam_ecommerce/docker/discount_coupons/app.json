{
  "metadata": {
    "id": "discount_coupons",
    "name": "Discount Coupons",
    "version": "0.1.0",
    "owner": "Vruksha Team",
    "description": "Discount coupon management for Niyam e-commerce system",
    "tags": [
      "ecommerce",
      "coupons",
      "discounts",
      "promotions"
    ],
    "vertical": "ecommerce"
  },
  "runtime": {
    "language": "node",
    "entrypoints": {
      "service": "service.js",
      "ui": "ui/discount_coupons-remote"
    },
    "port": 9109,
    "env": {
      "NATS_URL": "nats://127.0.0.1:4222"
    }
  },
  "apis": {
    "openapi": "./openapi.yaml",
    "basePath": "/"
  },
  "events": {
    "bus": "nats",
    "produces": [
      {
        "name": "coupon.created",
        "version": "1",
        "subject": "ecommerce.coupon.created.v1"
      },
      {
        "name": "coupon.redeemed",
        "version": "1",
        "subject": "ecommerce.coupon.redeemed.v1"
      }
    ],
    "consumes": []
  },
  "ai": {
    "enabled": false,
    "gateway": "vruksha-ai-gateway",
    "intents": [],
    "defaultProvider": "auto",
    "allowedProviders": ["openai", "anthropic", "gemini", "ollama", "local", "openrouter"],
    "fallbackChain": ["local", "ollama", "openrouter"],
    "config": {
      "maxTokens": 4096,
      "temperature": 0.7,
      "timeout": 30000
    }
  },
  "permissions": [
    {
      "resource": "discount_coupons",
      "actions": ["read", "write", "update", "delete"]
    }
  ],
  "config": {
    "public": {},
    "secrets": ["DB_PASSWORD", "JWT_SECRET", "NATS_URL"]
  },
  "health": {
    "liveness": "/healthz",
    "readiness": "/readyz"
  },
  "depends_on": []
}
