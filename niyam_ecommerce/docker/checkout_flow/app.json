{
  "metadata": {
    "id": "checkout_flow",
    "name": "Checkout Flow",
    "version": "1.0.0",
    "owner": "Vruksha Team",
    "description": "Multi-step checkout process with address, shipping, payment, and order placement",
    "tags": ["ecommerce", "checkout", "orders", "payments", "shipping"]
  },
  "runtime": {
    "language": "node",
    "entrypoints": {
      "service": "service.js",
      "ui": "/ui/dist"
    },
    "port": 9103,
    "env": {
      "NATS_URL": "nats://127.0.0.1:4222"
    }
  },
  "apis": {
    "openapi": "./openapi.yaml",
    "basePath": "/"
  },
  "events": {
    "bus": "nats",
    "produces": [
      {
        "name": "checkout.completed",
        "version": "1",
        "subject": "ecommerce.checkout.completed.v1"
      },
      {
        "name": "checkout.failed",
        "version": "1",
        "subject": "ecommerce.checkout.failed.v1"
      }
    ],
    "consumes": []
  },
  "ai": {
    "enabled": false,
    "gateway": "vruksha-ai-gateway",
    "intents": [],
    "defaultProvider": "auto",
    "allowedProviders": ["openai", "anthropic", "gemini", "ollama", "local", "openrouter"],
    "fallbackChain": ["local", "ollama", "openrouter"],
    "config": {
      "maxTokens": 4096,
      "temperature": 0.7,
      "timeout": 30000
    }
  },
  "permissions": [
    {
      "resource": "checkout_flow",
      "actions": ["read", "write", "update", "delete"]
    }
  ],
  "config": {
    "public": {},
    "secrets": ["DB_PASSWORD", "JWT_SECRET", "NATS_URL"]
  },
  "health": {
    "liveness": "/healthz",
    "readiness": "/readyz"
  },
  "depends_on": []
}
