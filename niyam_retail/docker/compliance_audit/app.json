{
  "metadata": {
    "id": "compliance_audit",
    "name": "Compliance Audit",
    "version": "1.0.0",
    "owner": "Vruksha Team",
    "description": "compliance_audit app for Niyam",
    "tags": []
  },
  "runtime": {
    "language": "node",
    "entrypoints": {
      "service": "server.js",
      "ui": "ui/compliance_audit-remote"
    },
    "port": 8871,
    "env": {
      "NODE_ENV": "production",
      "NATS_URL": "nats://127.0.0.1:4222"
    }
  },
  "apis": {
    "openapi": "./openapi.yaml",
    "basePath": "/api/compliance-audit"
  },
  "events": {
    "bus": "nats",
    "produces": [
      {
        "name": "compliance_audit.created",
        "version": "1",
        "subject": "compliance.compliance.audit.created.v1"
      },
      {
        "name": "compliance_audit.updated",
        "version": "1",
        "subject": "compliance.compliance.audit.updated.v1"
      }
    ],
    "consumes": []
  },
  "ai": {
    "enabled": false,
    "gateway": "vruksha-ai-gateway",
    "intents": [],
    "defaultProvider": "auto",
    "allowedProviders": [
      "openai",
      "anthropic",
      "gemini",
      "ollama",
      "local",
      "openrouter",
      "factory-droid",
      "azure-openai",
      "bedrock",
      "groq",
      "mistral",
      "cohere",
      "kimi",
      "qwen",
      "zhipu-glm",
      "deepseek",
      "baichuan"
    ],
    "fallbackChain": [
      "local",
      "ollama",
      "openrouter",
      "openai"
    ],
    "config": {
      "maxTokens": 4096,
      "temperature": 0.7,
      "timeout": 30000
    }
  },
  "permissions": [
    {
      "resource": "compliance_audit",
      "actions": [
        "read",
        "write",
        "update",
        "delete"
      ]
    }
  ],
  "config": {
    "public": {},
    "secrets": [
      "DB_PASSWORD",
      "JWT_SECRET",
      "NATS_URL"
    ]
  },
  "health": {
    "liveness": "/healthz",
    "readiness": "/readyz"
  },
  "depends_on": []
}