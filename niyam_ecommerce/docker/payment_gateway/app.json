{
  "metadata": {
    "id": "payment_gateway",
    "name": "Payment Gateway",
    "version": "0.1.0",
    "owner": "Vruksha Team",
    "description": "Payment gateway integration for Niyam e-commerce system",
    "tags": [
      "ecommerce",
      "payments",
      "transactions",
      "gateway"
    ],
    "vertical": "ecommerce"
  },
  "runtime": {
    "language": "node",
    "entrypoints": {
      "service": "service.js",
      "ui": "ui/payment_gateway-remote"
    },
    "port": 9106,
    "env": {
      "NATS_URL": "nats://127.0.0.1:4222"
    }
  },
  "apis": {
    "openapi": "./openapi.yaml",
    "basePath": "/"
  },
  "events": {
    "bus": "nats",
    "produces": [
      {
        "name": "payment.authorized",
        "version": "1",
        "subject": "ecommerce.payment.authorized.v1"
      },
      {
        "name": "payment.captured",
        "version": "1",
        "subject": "ecommerce.payment.captured.v1"
      },
      {
        "name": "payment.refunded",
        "version": "1",
        "subject": "ecommerce.payment.refunded.v1"
      }
    ],
    "consumes": []
  },
  "ai": {
    "enabled": false,
    "gateway": "vruksha-ai-gateway",
    "intents": [],
    "defaultProvider": "auto",
    "allowedProviders": ["openai", "anthropic", "gemini", "ollama", "local", "openrouter"],
    "fallbackChain": ["local", "ollama", "openrouter"],
    "config": {
      "maxTokens": 4096,
      "temperature": 0.7,
      "timeout": 30000
    }
  },
  "permissions": [
    {
      "resource": "payment_gateway",
      "actions": ["read", "write", "update", "delete"]
    }
  ],
  "config": {
    "public": {},
    "secrets": ["DB_PASSWORD", "JWT_SECRET", "NATS_URL"]
  },
  "health": {
    "liveness": "/healthz",
    "readiness": "/readyz"
  },
  "depends_on": []
}
