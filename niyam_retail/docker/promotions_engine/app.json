{
  "metadata": {
    "id": "promotions_engine",
    "name": "Promotions Engine",
    "version": "0.1.0",
    "owner": "Vruksha Team",
    "description": "Promotions Engine module for Niyam retail system",
    "tags": [
      "module"
    ]
  },
  "runtime": {
    "language": "node",
    "entrypoints": {
      "service": "service.js",
      "ui": "http://localhost:5346/remoteEntry.js"
    },
    "port": 8966,
    "env": {
      "NATS_URL": "nats://127.0.0.1:4222"
    }
  },
  "apis": {
    "openapi": "./openapi.yaml",
    "basePath": "/"
  },
  "events": {
    "bus": "nats",
    "produces": [
      {
        "name": "promotions_engine.created",
        "version": "1",
        "subject": "promotions.promotions.engine.created.v1"
      },
      {
        "name": "promotions_engine.updated",
        "version": "1",
        "subject": "promotions.promotions.engine.updated.v1"
      }
    ],
    "consumes": []
  },
  "ai": {
    "enabled": false,
    "gateway": "vruksha-ai-gateway",
    "intents": [],
    "defaultProvider": "auto",
    "allowedProviders": [
      "openai",
      "anthropic",
      "gemini",
      "ollama",
      "local",
      "openrouter",
      "factory-droid",
      "azure-openai",
      "bedrock",
      "groq",
      "mistral",
      "cohere",
      "kimi",
      "qwen",
      "zhipu-glm",
      "deepseek",
      "baichuan"
    ],
    "fallbackChain": [
      "local",
      "ollama",
      "openrouter",
      "openai"
    ],
    "config": {
      "maxTokens": 4096,
      "temperature": 0.7,
      "timeout": 30000
    }
  },
  "permissions": [
    {
      "resource": "promotions_engine",
      "actions": [
        "read",
        "write",
        "update",
        "delete"
      ]
    }
  ],
  "config": {
    "public": {},
    "secrets": [
      "DB_PASSWORD",
      "JWT_SECRET",
      "NATS_URL"
    ]
  },
  "health": {
    "liveness": "/healthz",
    "readiness": "/readyz"
  },
  "depends_on": []
}